<div class="navbar navbar-expand-sm navbar-light navbar-ejobis">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1607874094/ejobis/ejobis_logo_ld_be6p6k.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     <% if user_signed_in? %>
          <li class="nav-item active">
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar , :width => 50, :height => 50, :gravity => "faces",  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
              <%= image_tag "http://res.cloudinary.com/numama/image/upload/v1606146250/Birds%20Booking/GO_eir181.jpg" , :width => 50, :height => 50, :gravity => "faces",  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Perfil", "/profile", class: "dropdown-item" %>
                <%= link_to "Publicar uma vaga", new_company_ejobi_path(@company), class: "dropdown-item" %>
                <%= link_to "Procurar um eJober", ejobers_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
    </ul>
  </div>
</div>
